@using Localink.Modules.Settings.Core
@using Localink.Modules.Settings.Core.Localization
<div ng-controller="settings.views.tests.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Tests")</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">
            <div class="form">
                <form class="horizontal-form">
                    <div class="form-body" enter-key="vm.getTests()">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row margin-bottom-10">
                        <div class="col-sm-12 text-right">
                            <button class="btn btn-default" ng-click="vm.getTests()"><i class=" fa fa-refresh"></i> @L("Refresh")</button>
                            <button class="btn blue" ng-click="vm.addTest()"><i class=" fa fa-refresh"></i> @L("AddTest")</button>
                        </div>
                    </div>
                </form>
            </div>

            <div ui-grid="vm.gridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
        </div>
    </div>
</div>
